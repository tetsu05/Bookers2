<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label>Name</label>
  <%= f.text_field :name %>
  <label>Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label>Introduction</label>
  <%= f.text_area :introduction %>
  <%= f.submit "Update User" %>
<% end %>
