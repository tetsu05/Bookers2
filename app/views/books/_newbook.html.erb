<h2>New book</h2>
<%= form_with model: book, url:'/books', local:true do |f| %>
  <label style="display:block;">title</label>
  <%= f.text_field :title %>
  <label style="display:block;">opinion</label>
  <%= f.text_area :body %>
  <div class="mt-3"><%= f.submit 'Create Book', class: "btn btn-success" %></div>
<% end %>