<%= render 'books/book',user: @user %>
<%= render 'books/newbook',book: @book %>

<h1>Books</h1>
<% @books.each do |book| %>
  <%= link_to user_path(@user) do %>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  <% end %>
  <p>Title</p>
  <span><%= link_to book.title, "/books/#{book.id}" %></span>
  <p>opinion</p>
  <span><%= book.body %></span>
<% end %>

