<%= render 'books/book',user: @user %>
<%= render 'books/newbook',book: @book %>

<h1>Books</h1>
<% @books.each do |book| %>
  <span><%= book.user.profile_image %></span>
  <p>Title</p>
  <span><%= link_to book.title, "/books/#{book.id}" %></span>
  <p>opinion</p>
  <span><%= book.body %></span>
<% end %>

